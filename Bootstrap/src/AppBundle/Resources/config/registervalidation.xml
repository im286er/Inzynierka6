                </option>
            </constraint>
            <constraint name="Length">
                <option name="min">3</option>
                <option name="minMessage">Imie jest za krótka</option>
                <option name="max">20</option>
                <option name="maxMessage">Imie jest za długa</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>

    </class>

</constraint-mapping>

{% extends "base.html.twig" %}

{% block fos_user_content %}
<style>
    #kontener{
        position: relative;
        top: 75px;
    }
    .center-block {
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
       .element {
       .center-block();
       }
</style>
<div class="container" id="kontener">
    <div class="center-block">
        <div class="col-sm-4 col-sm-offset-4">
        <h1 class="page-header text-center">Resetowanie hasła</h1>
        <div class="panel panel-default text-left">
            <div class="panel-body">
                <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                    <div>
                        <div class="form-group">
                            <label for="username">Nazwa Użytkownika</label>
                                <input type="text" id="username" name="username" required="required" class="form-control" />
                        </div>
                        {% if invalid_username is defined %}
                            <p>{{ 'Niepoprawna nazwa użytkownika'|trans({'%username%': invalid_username}) }}</p>
                        {% endif %}
                    </div>
                    <div>
                        <input class="btn btn-primary" type="submit" value="Resetuj hasło" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>
</div>
{% endblock fos_user_content %}
